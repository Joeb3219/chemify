<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.charredgames.chemify"
    android:versionCode="6"
    android:versionName="1.2.3" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <supports-screens android:resizeable="true" android:largeScreens="true"/>
    
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.charredgames.chemify.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.charredgames.chemify.activity.Response"
            android:label="@string/title_activity_response"
            android:parentActivityName="com.charredgames.chemify.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.charredgames.chemify.MainActivity" />
        </activity>
        
        <activity
            android:name="com.charredgames.chemify.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.charredgames.chemify.activity.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.charredgames.chemify.MainActivity" />
        </activity>
        
        <activity
            android:name="com.charredgames.chemify.activity.ElementEdit"
            android:label="@string/prefButton_elements_title"
            android:parentActivityName="com.charredgames.chemify.activity.ElementEdit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.charredgames.chemify.SettingsActivity" />
			<intent-filter>
				<action android:name="com.charredgames.chemify.activity.ElementEdit" />
				<category android:name="android.intent.category.DEFAULT" />
       		</intent-filter>
        </activity>
    </application>

</manifest>
