<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.charredgames.chemify"
    android:versionCode="20"
    android:versionName="1.4.3" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <supports-screens
         android:resizeable="true"
         android:largeScreens="true"
         android:smallScreens="true"
         android:normalScreens="true"
         android:xlargeScreens="true"
         android:anyDensity="true"
          />
    
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.charredgames.chemify.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.charredgames.chemify.activity.Response"
            android:label="@string/title_activity_response"
            android:parentActivityName="com.charredgames.chemify.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.charredgames.chemify.MainActivity" />
        </activity>
        
        <activity
            android:name="com.charredgames.chemify.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.charredgames.chemify.activity.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.charredgames.chemify.MainActivity" />
        </activity>
        
        <activity
            android:name="com.charredgames.chemify.activity.DefinitionsActivity"
            android:label="@string/title_activity_definitions"
            android:parentActivityName="com.charredgames.chemify.activity.DefinitionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.charredgames.chemify.MainActivity" />
        </activity>
        
		<activity
            android:name="com.charredgames.chemify.activity.PolyIonsActivity"
            android:label="@string/title_activity_polyIons"
            android:parentActivityName="com.charredgames.chemify.activity.PolyIonsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.charredgames.chemify.MainActivity" />
        </activity>    
        
		<activity
            android:name="com.charredgames.chemify.activity.ActivitySeriesActivity"
            android:label="@string/title_activity_activityseries"
            android:parentActivityName="com.charredgames.chemify.activity.ActivitySeriesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.charredgames.chemify.MainActivity" />
        </activity>    
        
        <activity
            android:name="com.charredgames.chemify.activity.ElementEdit"
            android:label="@string/prefButton_elements_title"
            android:parentActivityName="com.charredgames.chemify.activity.ElementEdit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.charredgames.chemify.SettingsActivity" />
			<intent-filter>
				<action android:name="com.charredgames.chemify.activity.ElementEdit" />
				<category android:name="android.intent.category.DEFAULT" />
       		</intent-filter>
        </activity>
        
        <activity
            android:name="com.charredgames.chemify.activity.AboutActivity"
            android:label="@string/prefButton_about_title"
            android:parentActivityName="com.charredgames.chemify.activity.AboutActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.charredgames.chemify.SettingsActivity" />
			<intent-filter>
				<action android:name="com.charredgames.chemify.activity.AboutActivity" />
				<category android:name="android.intent.category.DEFAULT" />
       		</intent-filter>
        </activity>
        
        <activity android:name="com.google.ads.AdActivity" 
   android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>

</manifest>
