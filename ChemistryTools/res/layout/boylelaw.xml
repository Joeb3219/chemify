<RelativeLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background = "@color/accent_bg">
  	
    
   	<RelativeLayout 
        android:id = "@+id/units_layer"
        android:layout_width = "fill_parent"
        android:layout_height = "match_parent"
        >
    
        <View android:id="@+id/fakeView"
       android:layout_width="0dp"
       android:layout_height="0dp" 
       android:layout_centerInParent="true"/>
        
       <TextView android:id = "@+id/pressure1_label"
       	   android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignRight="@id/fakeView"
		   android:layout_alignParentLeft="true"
		   android:gravity="center_horizontal"
		   android:text = "P1"
		   android:ems="10"/>
        
       <EditText android:id = "@+id/value_pressure1"
           android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignRight="@id/fakeView"
		   android:layout_alignParentLeft="true"
           android:layout_below="@id/pressure1_label"
		   android:ems="10"
		   android:hint = "1.00"
	       android:inputType="numberDecimal" />
        
		<TextView android:id = "@+id/volume1_label"
       	   android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_below="@id/value_pressure1"
           android:layout_alignRight="@id/fakeView"
		   android:layout_alignParentLeft="true"
		   android:gravity="center_horizontal"
		   android:text = "V1"
		   android:ems="10"/>
        
       <EditText android:id = "@+id/value_volume1"
           android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignRight="@id/fakeView"
		   android:layout_alignParentLeft="true"
           android:layout_below="@id/volume1_label"
		   android:ems="10"
		   android:hint = "1.00"
	       android:inputType="numberDecimal" />
       
       <TextView android:id = "@+id/pressure2_label"
       	   android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignLeft="@id/fakeView"
		   android:layout_alignParentRight="true"
		   android:gravity="center_horizontal"
		   android:text = "P2"
		   android:ems="10"/>
        
       <EditText android:id = "@+id/value_pressure2"
           android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignLeft="@id/fakeView"
		   android:layout_alignParentRight="true"
           android:layout_below="@id/pressure2_label"
		   android:ems="10"
		   android:hint = "1.00"
	       android:inputType="numberDecimal" />
       
       <TextView android:id = "@+id/volume2_label"
       	   android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignLeft="@id/fakeView"
		   android:layout_alignParentRight="true"
		   android:layout_below="@id/value_pressure2"
		   android:gravity="center_horizontal"
		   android:text = "V2"
		   android:ems="10"/>
        
       <EditText android:id = "@+id/value_volume2"
           android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignLeft="@id/fakeView"
		   android:layout_alignParentRight="true"
           android:layout_below="@id/volume2_label"
		   android:ems="10"
		   android:hint = "1.00"
	       android:inputType="numberDecimal" />
        
	 </RelativeLayout>
    
</RelativeLayout>