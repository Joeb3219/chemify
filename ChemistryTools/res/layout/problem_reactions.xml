<ScrollView
  	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
  	android:layout_width = "fill_parent"
  	android:layout_height = "fill_parent">
  	
    <LinearLayout
        android:orientation = "vertical"
        android:layout_width = "fill_parent"
        android:layout_height = "wrap_content"
    >
        
        <TextView
          android:id = "@+id/problem_input"
          style = "@style/problem_input"
        />
        
        <TextView
          android:id = "@+id/problem_answer"
          style = "@style/problem_answer"
        />
        
		<TextView
		  android:id = "@+id/problem_weight"
		  style = "@style/problem_weight"
		/>   
		
		<TextView
			android:id = "@+id/problem_solubility"
			style = "@style/problem_solubility"    
		/>
		
    </LinearLayout>

</ScrollView>