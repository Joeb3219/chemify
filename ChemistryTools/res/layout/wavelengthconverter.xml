<RelativeLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background = "@color/accent_bg">
  	
    
   	<RelativeLayout 
        android:id = "@+id/units_layer"
        android:layout_width = "fill_parent"
        android:layout_height = "match_parent"
        >
    
        <View android:id="@+id/fakeView"
       android:layout_width="0dp"
       android:layout_height="0dp" 
       android:layout_centerInParent="true"/>
        
       <TextView android:id = "@+id/wavelength_label"
       	   android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignRight="@id/fakeView"
		   android:layout_alignParentLeft="true"
		   android:gravity="center_horizontal"
		   android:text = "Wavelength (&#955;)"
		   android:ems="10"/>
        
       <EditText android:id = "@+id/value_wavelength"
           android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignRight="@id/fakeView"
		   android:layout_alignParentLeft="true"
           android:layout_below="@id/wavelength_label"
		   android:ems="10"
		   android:hint = "1.00"
	       android:inputType="numberDecimal" />
        
		<TextView android:id = "@+id/energy_label"
       	   android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_below="@id/value_wavelength"
           android:layout_alignRight="@id/fakeView"
		   android:layout_alignParentLeft="true"
		   android:gravity="center_horizontal"
		   android:text = "Energy (E)"
		   android:ems="10"/>
        
       <EditText android:id = "@+id/value_energy"
           android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignRight="@id/fakeView"
		   android:layout_alignParentLeft="true"
           android:layout_below="@id/energy_label"
		   android:ems="10"
		   android:hint = "1.00"
	       android:inputType="numberDecimal" />
       
       <TextView android:id = "@+id/frequency_label"
       	   android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignLeft="@id/fakeView"
		   android:layout_alignParentRight="true"
		   android:gravity="center_horizontal"
		   android:text = "Frequency (&#957;)"
		   android:ems="10"/>
        
       <EditText android:id = "@+id/value_frequency"
           android:layout_width = "wrap_content"
           android:layout_height = "wrap_content"
           android:layout_alignLeft="@id/fakeView"
		   android:layout_alignParentRight="true"
           android:layout_below="@id/frequency_label"
		   android:ems="10"
		   android:hint = "1.00"
	       android:inputType="numberDecimal" />
        
	 </RelativeLayout>
    
</RelativeLayout>