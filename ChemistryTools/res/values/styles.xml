    <color name = "input_bg">#007EB2</color>
    <color name = "answer_bg">#00B4FF</color>
    <color name = "first_bg">#FF8800</color>
    <color name = "second_bg">#CC6D00</color>
        
    <style name = "problem_generic" parent = "@android:style/TextAppearance.Medium">
        <item name = "android:layout_width">fill_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:minHeight">48pt</item>
        <item name = "android:gravity">center</item>
        <item name = "android:background">#448844</item>
        <item name = "android:textColor">#FFFFFF</item>
        <item name = "android:onClick">responseClicked</item>
        <item name = "android:clickable">true</item>
    <!--<item name = "android:textIsSelectable">true</item>-->
	</style>
	
    <style name = "inputBox" parent = "@style/problem_generic">
        <item name = "android:background">@color/input_bg</item>
    </style>
    
    <style name = "answerBox" parent = "@style/problem_generic">
        <item name = "android:background">@color/answer_bg</item>
    </style>
    
    <style name = "firstBox" parent = "@style/problem_generic">
        <item name = "android:background">@color/first_bg</item>
    </style>
    
    <style name = "secondBox" parent = "@style/problem_generic">
        <item name = "android:background">@color/second_bg</item>
    </style>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
