<resources>

    <style name = "problem_generic" parent = "@android:style/TextAppearance.Medium">
        <item name = "android:layout_width">fill_parent</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:minHeight">48pt</item>
        <item name = "android:gravity">center</item>
        <item name = "android:background">#448844</item>
        <item name = "android:textColor">#FFFFFF</item>
        <item name = "android:onClick">responseClicked</item>
        <item name = "android:clickable">true</item>
	</style>
	
    <style name = "problem_input" parent = "@style/problem_generic">
        <item name = "android:background">#448844</item>
        <item name = "android:textColor">#FFFFFF</item>
        <!--<item name = "android:drawableLeft">@drawable/input_label</item>-->
    </style>
    
    <style name = "problem_answer" parent = "@style/problem_generic">
        <item name = "android:background">#333333</item>
        <item name = "android:textColor">#FFFFFF</item>
        <!--<item name = "android:drawableLeft">@drawable/answer_label</item> -->
    </style>
    
    <style name = "problem_weight" parent = "@style/problem_generic">
        <item name = "android:background">#888888</item>
        <item name = "android:textColor">#FFFFFF</item>
       <!-- <item name = "android:drawableLeft">@drawable/weight_label</item> -->
    </style>
    
    <style name = "problem_oxidation" parent = "@style/problem_generic">
        <item name = "android:background">#616161</item>
        <item name = "android:textColor">#FFFFFF</item>
       <!-- <item name = "android:drawableLeft">@drawable/oxidation_label</item> -->
    </style>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
